<CameraScreen>:
    GridLayout:
        cols: 1
        Camera: 
            id: camera
            resolution: (640, 480)
            play: False
        Button:
            text: 'Start Camera'
            on_press: root.start()
        Button:
            text: 'Capture'

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'